@page
@model Netlog.Web.Pages.Maintenance.DetailsModel

@{ ViewData["Title"] = "Details"; }

<h1>Rapor Detayı</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Plaka
        </dt>
        <dd class="col-sm-10">
            @Model.Maintenance.VehicleName
        </dd>
        <dt class="col-sm-2">
            Araç Tipi
        </dt>
        <dd class="col-sm-10">
            @Model.Maintenance.VehicleType
        </dd>
        <dt class="col-sm-2">
            Açıklama
        </dt>
        <dd class="col-sm-10">
            @Model.Maintenance.Description
        </dd>
        <dt class="col-sm-2">
            Durum
        </dt>
        <dd class="col-sm-10">
            @Model.Maintenance.Status
        </dd>
        <dt class="col-sm-2">
            Kullanıcı Adı
        </dt>
        <dd class="col-sm-10">
            @Model.Maintenance.UserName
        </dd>
        <dt class="col-sm-2">
            Resim
        </dt>
        <dd class="col-sm-10">
            <img width="200" height="150" src="@Model.Maintenance.Picture" />
        </dd>
        <dt class="col-sm-2">
            Map
        </dt>
        <dd class="col-sm-10">
            <iframe width="600" height="450" frameborder="0" style="border:0"
                    src="https://www.google.com/maps/embed/v1/place?q=@Model.Maintenance.LocationLatitude,@Model.Maintenance.LocationLongitude&key=AIzaSyBYku0jFVUG66CmbUBQXB2hfyFAvAPRkbw" allowfullscreen></iframe>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Index">Back to List</a>
</div>
